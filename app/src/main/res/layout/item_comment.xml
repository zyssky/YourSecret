<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/publisher_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/skin_about_brand"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/publisher_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Straybird"
        app:layout_constraintLeft_toRightOf="@id/publisher_icon"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/date_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="5月27日"
        android:textColor="@color/light_grey"
        app:layout_constraintLeft_toRightOf="@id/publisher_nickname"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/content_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="反之亦然，越是高调向人秀恩爱，越是薄情寡义。"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/publisher_nickname"
        app:layout_constraintLeft_toRightOf="@+id/publisher_icon"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>