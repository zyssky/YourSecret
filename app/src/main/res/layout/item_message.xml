<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    tools:context="com.example.administrator.yoursecret.Write.WriteActivity">

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="90dp"
        android:src="@drawable/test"
        android:scaleType="fitXY"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/message_title"
        android:layout_width="match_parent"
        android:lineSpacingExtra="4dp"
        android:text="航空mh370不知道怎么了突然间就好友哦了设计费"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/message_image"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="10dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:tint="@color/color_b0b8b2"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_room_black_24px"
        app:layout_constraintLeft_toRightOf="@+id/message_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:gravity="center|left"
        android:text="华南理工大学A1门前"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="2dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_chat_bubble_outline_black_24px"
        app:layout_constraintRight_toRightOf="parent"
        android:tint="@color/color_b0b8b2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="102"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView3"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp" />

</android.support.constraint.ConstraintLayout>